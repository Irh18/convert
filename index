    <script src="https://cdnjs.cloudflare.com/ajax/libs/heic2any/0.0.4/heic2any.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script>
        window.addEventListener('load', () => {
            setTimeout(() => {
                document.querySelector('.loading-overlay').classList.add('hidden');
                document.querySelector('.container').classList.add('loaded');
            }, 1500);
        });

        // Bottom bar navigation
        const convertSection = document.getElementById('convertSection');
        const renameSection = document.getElementById('renameSection');
        const showConvert = document.getElementById('showConvert');
        const showRename = document.getElementById('showRename');

        showConvert.addEventListener('click', () => {
            convertSection.classList.add('active');
            renameSection.classList.remove('active');
            showConvert.classList.add('active');
            showRename.classList.remove('active');
        });

        showRename.addEventListener('click', () => {
            renameSection.classList.add('active');
            convertSection.classList.remove('active');
            showRename.classList.add('active');
            showConvert.classList.remove('active');
        });

        // Convert HEIC to JPG
        async function convertHEIC() {
            const input = document.getElementById('heicInput');
            const progressContainer = document.getElementById('convertProgressContainer');
            const progressText = document.getElementById('convertProgressText');
            const progressFill = document.getElementById('convertProgressFill');
            const resultContainer = document.getElementById('convertResultContainer');
            const convertButton = document.getElementById('convertButton');
            const downloadAllButton = document.getElementById('convertDownloadAllButton');
            
            if (!input.files || input.files.length === 0) {
                alert('Please select at least one HEIC file!');
                return;
            }

            convertButton.classList.add('disabled');
            progressContainer.classList.add('active');
            resultContainer.innerHTML = '';
            downloadAllButton.classList.remove('active');

            const files = Array.from(input.files);
            const convertedFiles = [];
            let completed = 0;

            try {
                for (const heicFile of files) {
                    const jpgBlob = await heic2any({
                        blob: heicFile,
                        toType: 'image/jpeg',
                        quality: 1
                    });

                    completed++;
                    const progress = Math.round((completed / files.length) * 100);
                    progressText.textContent = `Converting... ${progress}%`;
                    progressFill.style.width = `${progress}%`;

                    const resultItem = document.createElement('div');
                    resultItem.className = 'result-item';

                    const downloadLink = document.createElement('a');
                    const url = URL.createObjectURL(jpgBlob);
                    const fileName = heicFile.name.replace(/\.heic$/i, '.jpg');
                    downloadLink.href = url;
                    downloadLink.download = fileName;
                    downloadLink.textContent = `Download ${fileName}`;
                    downloadLink.innerHTML += '<div class="underline"></div>';
                    resultItem.appendChild(downloadLink);

                    resultContainer.appendChild(resultItem);
                    convertedFiles.push({ blob: jpgBlob, name: fileName });
                }

                downloadAllButton.classList.add('active');
                downloadAllButton.onclick = async () => {
                    const zip = new JSZip();
                    convertedFiles.forEach(file => {
                        zip.file(file.name, file.blob);
                    });

                    const zipBlob = await zip.generateAsync({ type: 'blob' });
                    const zipUrl = URL.createObjectURL(zipBlob);
                    const zipLink = document.createElement('a');
                    zipLink.href = zipUrl;
                    zipLink.download = 'converted_images.zip';
                    zipLink.click();
                    URL.revokeObjectURL(zipUrl);
                };
            } catch (error) {
                console.error('Conversion error:', error);
                alert('Error converting one or more files. Please try again.');
            } finally {
                progressContainer.classList.remove('active');
                convertButton.classList.remove('disabled');
            }
        }

        // Rename Files
        async function renameFiles() {
            const nameInput = document.getElementById('nameInput');
            const fileInput = document.getElementById('fileInput');
            const progressContainer = document.getElementById('renameProgressContainer');
            const progressText = document.getElementById('renameProgressText');
            const progressFill = document.getElementById('renameProgressFill');
            const resultContainer = document.getElementById('renameResultContainer');
            const renameButton = document.getElementById('renameButton');
            const downloadAllButton = document.getElementById('renameDownloadAllButton');
            
            if (!fileInput.files || fileInput.files.length === 0) {
                alert('Please select at least one file!');
                return;
            }

            let baseName = nameInput.value.trim();
            if (!baseName) {
                baseName = 'File';
            }

            renameButton.classList.add('disabled');
            progressContainer.classList.add('active');
            resultContainer.innerHTML = '';
            downloadAllButton.classList.remove('active');

            const files = Array.from(fileInput.files);
            const renamedFiles = [];
            let completed = 0;

            try {
                for (let i = 0; i < files.length; i++) {
                    const file = files[i];
                    const extension = file.name.split('.').pop();
                    const newName = `${baseName} ${i + 1}.${extension}`;

                    completed++;
                    const progress = Math.round((completed / files.length) * 100);
                    progressText.textContent = `Processing... ${progress}%`;
                    progressFill.style.width = `${progress}%`;

                    const resultItem = document.createElement('div');
                    resultItem.className = 'result-item';

                    const downloadLink = document.createElement('a');
                    const url = URL.createObjectURL(file);
                    downloadLink.href = url;
                    downloadLink.download = newName;
                    downloadLink.textContent = `Download ${newName}`;
                    downloadLink.innerHTML += '<div class="underline"></div>';
                    resultItem.appendChild(downloadLink);

                    resultContainer.appendChild(resultItem);
                    renamedFiles.push({ blob: file, name: newName });
                }

                downloadAllButton.classList.add('active');
                downloadAllButton.onclick = async () => {
                    const zip = new JSZip();
                    renamedFiles.forEach(file => {
                        zip.file(file.name, file.blob);
                    });

                    const zipBlob = await zip.generateAsync({ type: 'blob' });
                    const zipUrl = URL.createObjectURL(zipBlob);
                    const zipLink = document.createElement('a');
                    zipLink.href = zipUrl;
                    zipLink.download = 'renamed_files.zip';
                    zipLink.click();
                    URL.revokeObjectURL(zipUrl);
                };
            } catch (error) {
                console.error('Processing error:', error);
                alert('Error processing one or more files. Please try again.');
            } finally {
                progressContainer.classList.remove('active');
                renameButton.classList.remove('disabled');
            }
        }

        document.getElementById('convertButton').addEventListener('click', convertHEIC);
        document.getElementById('renameButton').addEventListener('click', renameFiles);
    </script>
</body>
</html>
